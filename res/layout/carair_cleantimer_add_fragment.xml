<?xml version="1.0" encoding="utf-8"?>
<com.android.carair.fragments.base.FragmentViewBase xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_all" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TimePicker
            android:id="@+id/timerPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
        </TimePicker>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerPicker"
            android:text="描述"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:visibility="invisible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_below="@id/etTitle"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:id="@+id/llrepeat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/etTitle"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="重复" />

            <TextView
                android:id="@+id/tvRepeatDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRepeat"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/munion_ew2_mymunion_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_above="@+id/llWarning"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp">

            <Button
                android:id="@+id/btConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="删除"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btdelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="40dp"
                android:text="删除"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</com.android.carair.fragments.base.FragmentViewBase>