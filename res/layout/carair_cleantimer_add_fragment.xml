<?xml version="1.0" encoding="utf-8"?>
<com.android.carair.fragments.base.FragmentViewBase xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_all" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TimePicker
            android:id="@+id/timerPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
        </TimePicker>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerPicker"
            android:text="描述"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:visibility="invisible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_below="@id/etTitle"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:id="@+id/llrepeat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/etTitle"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="重复" />

            <TextView
                android:id="@+id/tvRepeatDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRepeat"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/munion_ew2_mymunion_arrows" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_above="@+id/llWarning"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/llWarning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llrepeat"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rlpm"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="pm预警值设置" />

                <TextView
                    android:id="@+id/tvpmWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="200" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/munion_ew2_mymunion_arrows" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:id="@+id/rlharmful"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="车内有害气体浓度预警值设置" />

                <TextView
                    android:id="@+id/tvHarmfulWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="15" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/munion_ew2_mymunion_arrows" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWarning"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="删除"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btConfirm"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="删除"
            android:textSize="20sp" />
    </RelativeLayout>

</com.android.carair.fragments.base.FragmentViewBase>