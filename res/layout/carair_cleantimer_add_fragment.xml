<?xml version="1.0" encoding="utf-8"?>
<com.android.carair.fragments.base.FragmentViewBase xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mySwitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_all" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TimePicker
            android:id="@+id/timerPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" >
        </TimePicker>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timerPicker"
            android:text="描述" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_below="@id/etTitle"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/llrepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTitle"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timerPicker"
                android:layout_marginTop="5dp"
                android:text="重复" />

            <TextView
                android:id="@+id/tvRepeatDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timerPicker"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_below="@id/llrepeat"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/llWarning"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llrepeat"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:orientation="horizontal" 
                android:gravity="center_vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pm预警值设置"/>
                <TextView 
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tvpmWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:orientation="horizontal" 
                android:gravity="center_vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车内有害气体浓度预警值设置"/>
                <TextView 
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tvHarmfulWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWarning"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="删除"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btdelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btConfirm"
            android:gravity="center"
            android:paddingRight="40dp"
            android:text="删除"
            android:textSize="20sp" />
    </RelativeLayout>

</com.android.carair.fragments.base.FragmentViewBase>