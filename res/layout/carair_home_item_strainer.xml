<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.android.carair"
    android:id="@+id/fragment_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_all"
    android:paddingTop="50dp" >

    <TextView
        android:id="@+id/tvStrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="滤网剩余"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <com.android.carair.views.RoundProgressBarNormal
        android:id="@+id/rdStrainerProgress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/tvStrainer"
        android_custom:roundOuterWidth="7dp"
        android:layout_centerHorizontal="true"
        android_custom:roundColor="#ffffff"
        android_custom:roundTextSize="30sp"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btStrainerReset"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@id/rdStrainerProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/icon_button_selector"
        android:text="重置"
        android:textColor="#8dc6ff"
        android:textSize="23sp" />

    <LinearLayout
        android:id="@+id/strainerAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btStrainerReset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/strainerAlertIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_q" />

        <!-- TextView
            android:id="@+id/tvStrainerAlertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="更换滤网"
            android:textColor="@android:color/white"
            android:textSize="22sp" / -->
            
    </LinearLayout>

</RelativeLayout>